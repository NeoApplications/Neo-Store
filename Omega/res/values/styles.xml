<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/LauncherTheme">
        <item name="allAppsScrimColor">@color/grey_50</item>
        <item name="widgetsTheme">@style/WidgetContainerTheme.Light</item>
        <item name="dashIconBackground">@color/grey_300</item>
        <item name="dashSheetBackground">@color/grey_50</item>
        <item name="popupColorPrimary">@color/grey_300</item>
        <item name="alertDialogTheme">@style/AlertDialog.Light</item>

        <item name="allappsHeaderProtectionColor">@color/system_neutral1_100</item>
        <item name="allAppsInterimScrimAlpha">46</item>
    </style>

    <style name="AppTheme.Dark" parent="@style/LauncherTheme.Dark">
        <item name="allAppsScrimColor">@color/grey_900</item>
        <item name="widgetsTheme">@style/WidgetContainerTheme.Dark</item>
        <item name="dashIconBackground">@color/grey_800</item>
        <item name="dashSheetBackground">@color/grey_900</item>
        <item name="popupColorPrimary">@color/grey_800</item>
        <item name="alertDialogTheme">@style/AlertDialog.Dark</item>

        <item name="allAppsInterimScrimAlpha">102</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme.Dark">
        <item name="allAppsScrimColor">@color/settings_background_black</item>
        <item name="widgetsTheme">@style/WidgetContainerTheme.Black</item>
        <item name="dashIconBackground">@color/grey_900</item>
        <item name="dashSheetBackground">@color/settings_background_black</item>
        <item name="popupColorPrimary">@color/grey_900</item>
        <item name="alertDialogTheme">@style/AlertDialog.Dark</item>

        <item name="android:colorPrimary">#000000</item>
        <item name="allAppsNavBarScrimColor">#80000000</item>
        <item name="popupColorSecondary">#000000</item>
        <item name="popupColorTertiary">@color/grey_900</item>
        <item name="isMainColorDark">true</item>
        <item name="folderFillColor">#DD000000</item>
        <item name="folderIconBorderColor">#FF000000</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="settingsBackground">@android:color/white</item>
        <item name="settingsSearchBackground">?settingsBackground</item>
        <item name="settingsPopupBackground">?settingsBackground</item>
        <item name="useLightSystemBars">true</item>
        <item name="alertDialogTheme">@style/AlertDialog.Light</item>
        <item name="bottomSheetNavBarColor">@color/all_apps_navbar_color</item>
        <item name="workspaceShadowColor">#B0000000</item>
        <item name="workspaceAmbientShadowColor">#40000000</item>
    </style>

    <style name="SettingsTheme.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="settingsBackground">@android:color/white</item>
        <item name="settingsSearchBackground">?settingsBackground</item>
        <item name="settingsPopupBackground">?settingsBackground</item>
        <item name="useLightSystemBars">true</item>
        <item name="alertDialogTheme">@style/AlertDialog.Light</item>
        <item name="bottomSheetNavBarColor">@color/all_apps_navbar_color</item>
        <item name="android:statusBarColor">@color/lollipopStatusBar</item>
        <item name="iconShapeTint">@color/grey_700</item>

        <item name="workspaceShadowColor">#B0000000</item>
        <item name="workspaceAmbientShadowColor">#40000000</item>
    </style>

    <style name="SettingsTheme.Light.Transparent" parent="SettingsTheme">
        <item name="android:statusBarColor">@color/lollipopStatusBar</item>
    </style>

    <style name="SettingsTheme.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/settings_background_dark</item>
        <item name="colorPrimary">?android:windowBackground</item>
        <item name="colorPrimaryDark">?android:windowBackground</item>
        <item name="android:textColorPrimary">#D5D2D2</item>
        <item name="android:textColorSecondary">#A8A7A7</item>
        <item name="android:textColorTertiary">#7C7C7C</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="useLightSystemBars">false</item>
        <item name="alertDialogTheme">@style/AlertDialog.Dark</item>
        <item name="buttonStyle">@style/SettingsTheme.Button</item>
        <item name="settingsBackground">@color/settings_background_dark</item>
        <item name="settingsSearchBackground">@color/settings_background_dark_2dp</item>
        <item name="settingsPopupBackground">@color/settings_background_dark_8dp</item>
        <item name="bottomSheetDialogTheme">@style/SettingsTheme.BottomSheetDialog.Dark</item>
        <item name="bottomSheetNavBarColor">@android:color/transparent</item>
        <item name="bottomSheetScrimColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/SettingsTheme.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/SettingsTheme.PopupMenu</item>

        <item name="iconShapeTint">@color/grey_400</item>
        <item name="workspaceShadowColor">#B0000000</item>
        <item name="workspaceAmbientShadowColor">#40000000</item>
    </style>

    <style name="SettingsTheme.Black" parent="SettingsTheme.Dark">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="settingsBackground">@color/settings_background_black</item>
        <item name="settingsSearchBackground">@color/settings_background_black_2dp</item>
        <item name="settingsPopupBackground">@color/settings_background_black_8dp</item>

        <item name="workspaceTextColor">#FF212121</item>
        <item name="workspaceShadowColor">@android:color/white</item>
        <item name="workspaceAmbientShadowColor">@android:color/white</item>
        <item name="workspaceKeyShadowColor">@android:color/transparent</item>
        <item name="isWorkspaceDarkText">true</item>

        <item name="iconShapeTint">@color/grey_50</item>
    </style>

    <style name="AlertDialog.Light" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="AlertDialog.Dark" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="SettingsTheme.BottomSheetDialog.Light" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="bottomSheetStyle">@style/SettingsTheme.BottomSheet</item>
    </style>

    <style name="SettingsTheme.BottomSheetDialog.Dark" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="bottomSheetStyle">@style/SettingsTheme.BottomSheet</item>
    </style>

    <style name="SettingsTheme.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_round_rect_primary</item>
    </style>

    <style name="SettingsTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsTheme.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/mtrl_popupmenu_background</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <style name="SettingsTheme.PopupMenu.Overflow" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/mtrl_popupmenu_background</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialog.Light</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Settings.SearchBar" parent="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/search_bar_text_size</item>
    </style>

    <style name="TextAppearance.TileTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="customFontType">settingsTileTitle</item>
    </style>

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small" />

    <style name="SettingsTheme.PreferenceTheme.Preference.Title" parent="@style/TextAppearance.AppCompat.Subhead" />

    <style name="DashTheme" parent="@style/AppTheme.Dark">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="DashTheme.Item" parent="DashTheme">
        <item name="cpv_borderColor">@color/colorAccent</item>
    </style>

    <style name="WidgetContainerTheme.Light" parent="SettingsTheme.Light">
        <item name="android:colorEdgeEffect">?android:attr/textColorSecondary</item>
        <item name="android:colorPrimary">@color/grey_100</item>
        <item name="bottomSheetNavBarColor">@color/all_apps_navbar_color</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#3A3939</item>
        <item name="android:textColorTertiary">#545454</item>
        <item name="colorBackgroundFloating">?backgroundColor</item>
    </style>

    <style name="WidgetContainerTheme.Dark" parent="SettingsTheme.Dark">
        <item name="android:colorEdgeEffect">?android:attr/textColorSecondary</item>
        <item name="android:colorPrimary">@color/settings_background_dark</item>
        <item name="bottomSheetNavBarColor">@color/grey_900</item>
        <item name="android:textColorPrimary">#D5D2D2</item>
        <item name="backgroundTint">?backgroundColor</item>
        <item name="android:textColorSecondary">#A8A7A7</item>
        <item name="android:textColorTertiary">#7C7C7C</item>
    </style>

    <style name="WidgetContainerTheme.Black" parent="SettingsTheme.Black">
        <item name="android:colorEdgeEffect">?android:attr/textColorSecondary</item>
        <item name="android:textColorPrimary">#D5D2D2</item>
        <item name="backgroundTint">?backgroundColor</item>
        <item name="android:textColorSecondary">#A8A7A7</item>
        <item name="android:textColorTertiary">#7C7C7C</item>
        <item name="android:colorPrimary">#000000</item>
        <item name="bottomSheetNavBarColor">#00000000</item>
    </style>

    <style name="Widget.Omega.AppWidget.InnerView" parent="android:Widget">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">@dimen/smartspaceLetterSpacing</item>
        <item name="android:shadowColor">?attr/workspaceShadowColor</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ClockWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="ClockWidgetContainer" parent="ClockWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>
